{{> header}}
<div class="row">
    <h4>Click two points on the map for directions between them.</h4>
</div>
<div class="row">
    <button id="pick-points-button" onclick="pickPointsMode()" class="selected-button">Pick End Points</button>
    <button id="exclude-points-button" onclick="excludePointsMode()">Exclude Points</button>
    <button id="annotation-points-button" onclick="annotationMode()">Add Annotation</button>
    <button onclick="submitData()" class="button-primary">Submit</button>
</div>
<div class="row">
    <div class="one columns">
        or choose annotations:
    </div>
    <div class="four columns">
        <label for="annotationListA">Point A</label>
        <select class="u-full-width" id="annotationListA" onchange="annotationAChosen()">
            <option value="-1">Select an annotation: </option>
        </select>
    </div>
    <div class="four columns">
        <label for="annotationListB">Point B</label>
        <select class="u-full-width" id="annotationListB" onchange="annotationBChosen()">
            <option value="-1">Select an annotation: </option>
        </select>
    </div>
</div>
<div class="row">
    <button id="reset-pick-points-button" onclick="resetPickPoints()" class="reset-button">Reset End Points</button>
    <button id="reset-exclude-points-button" onclick="resetExcludePoints()" class="reset-button">Reset Exclude Points</button>
</div>
<div class="row">
    <button id="steps-back" class="reset-button"><</button>
    <button id="steps-forward" class="reset-button">></button>
    <button id="steps-text" class="reset-button">No Directions Yet</button>
</div>
{{#filenames}}
    {{#evenIndex}}
    <div class="row">
    {{/evenIndex}}
        <div class="one-half column">
            <img class="floor" src="{{route}}{{string}}" data-original="{{route}}{{string}}">
            <p>{{string}}</p>
        </div>
    {{^evenIndex}}
    </div>
    {{/evenIndex}}
{{/filenames}}
<div id="point-holder"></div>
</div> <!-- Ends container in header.mustache -->
<div id="loading-screen"></div>
<div id="loading-text"><h2>Loading route please wait...</h2></div>
<script type="text/javascript" src="js/route.js"></script>
<div class="container"> <!-- Matches container div in footer.mustache -->
{{> footer}}
